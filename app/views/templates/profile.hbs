<div class="hero-unit">
  <h2>Profile:</h2>
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="emailinput">name</label>
            <div class="controls">
                <div class="input-prepend">
                    <input type="text" class="input-xlarge focused" id="name" value="{{user.name}}"/>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="lnameinput">picture</label>
            <div class="controls">
                <a href="{{user.link}}" id="link">
                  <img src="{{user.picture}}" id="picture"></img>
                </a>
            </div>
        </div>
    </fieldset>
</div>